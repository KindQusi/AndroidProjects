<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectedActivity">

    <TextView
        android:id="@+id/tv_Output"
        android:layout_width="102dp"
        android:layout_height="55dp"
        android:layout_marginTop="116dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/tv_DeviceNameLabel"
        tools:layout_editor_absoluteX="176dp" />

    <EditText
        android:id="@+id/tv_Input"
        android:layout_width="239dp"
        android:layout_height="47dp"
        android:hint="What u want send"
        app:layout_constraintBottom_toTopOf="@+id/bt_sendMessage"
        app:layout_constraintTop_toBottomOf="@+id/tv_Output"
        app:layout_constraintVertical_bias="0.262"
        tools:layout_editor_absoluteX="98dp" />

    <Button
        android:id="@+id/bt_sendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="159dp"
        android:onClick="SendMessage"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Output"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/tv_DeviceNameLabel"
        android:layout_width="96dp"
        android:layout_height="52dp"
        android:layout_marginTop="84dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="176dp" />
</androidx.constraintlayout.widget.ConstraintLayout>