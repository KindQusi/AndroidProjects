<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:onClick="btn_Click_Sin"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2"
        android:gravity="center"

        android:hint="0"
        android:padding="10dp"
        android:text="historyText" />

    <TextView
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2"
        android:gravity="center"
        android:hint="0"

        android:padding="10dp"
        android:text="inputText"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Logarithm"
            android:text="log"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Root"
            android:text="√"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Exponentiation"
            android:text="x^n"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Percent"
            android:text="%"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Multiplication"
            android:text="×"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Sin"
            android:text="sin"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_Click_7"
            android:text="7"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_Click_8"
            android:text="8"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_Click_9"
            android:text="9"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Division"
            android:text="÷"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Cos"
            android:text="cos"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_Click_4"
            android:text="4"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_Click_5"
            android:text="5"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_Click_6"
            android:text="6"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Subtraction"
            android:text="-"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Tg"
            android:text="tg"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_Click_1"
            android:text="1"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_Click_2"
            android:text="2"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_Click_3"
            android:text="3"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Addition"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Delete"
            android:text="C"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Backspace"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:icon="@drawable/ic_baseline_backspace_24"
            app:iconPadding="0dp"
            app:iconTint="@color/black" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btn_Click_0"
            android:text="0"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_Dot"
            android:text=","
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gold"
            android:onClick="btn_Click_SumUp"
            android:text="="
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>